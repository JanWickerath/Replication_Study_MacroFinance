#! python


def build(ctx):

    ctx(
        features='run_m_script',
        source='Replication_Figure_1_updated.m',
        target=ctx.path_to(
            ctx, 'OUT_FIGURES', 'Replication_Figure_1_updated.pdf'
        ),
        deps=[
            ctx.path_to(ctx, 'OUT_DATA', 'data_figure_1.mat'),
        ],
        name='Figure_1_updated'
    )

    ctx(
        features='run_m_script',
        source='autocorrelogram.m',
        target=[
            ctx.path_to(
                ctx, 'OUT_FIGURES', 'autocorrelation_tfp.png'
            ),
            ctx.path_to(
                ctx, 'OUT_FIGURES', 'autocorrelation_xi.png'
            )
        ],
        deps=[
            ctx.path_to(ctx, 'OUT_ANALYSIS', 'series_of_shocks.mat'),
        ],
        name='autocorrelogram'
    )
